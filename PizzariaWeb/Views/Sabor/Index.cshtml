@model Sabor

<div class="row">
    <div class="col-sm-6">
        <h2>Sabors registrados</h2>
        <table style="margin-bottom:15px;margin-top:15px"
               class="table table-hover table-striped">
            <thead>
                <tr class="table-active">
                    <th>Nome</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Sabor item in ViewBag.ListaSabor)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td class="text-right">
                            <a class="btn btn-danger" asp-action="Remover" asp-route-id="@item.SaborId">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-6">
        <h2>Registrar Sabor</h2>
        <form asp-action="Index" method="post">
            <fieldset>
                <legend>Cadastrar Produto</legend>
                <div asp-validation-summary="ModelOnly" class="text-primary"></div>

                <div class="form-group" id="Nome">
                    <label>Nome</label>
                    <input type="text" asp-for="Nome" class="form-control" />
                </div>

                <input type="submit" class="btn btn-success" value="Cadastrar" />
            </fieldset>
        </form>
    </div>
</div>


