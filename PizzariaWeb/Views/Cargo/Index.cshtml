@model Cargo

<div class="card">
    <div class="card-header row justify-content-between">
        <div class="col-4 pl-2">
            <h5>Cargos registrados</h5>
        </div>
        <div class="col-6 pl-0">
            <h5>Registrar Cargo</h5>
        </div>
    </div>
    <div class="row container mb-3">
        <div class="col-sm-6">
            <table style="margin-bottom:15px;margin-top:15px"
                   class="table table-hover table-striped">
                <thead>
                    <tr class="table-active">
                        <th>Nome</th>
                        <th>Salario</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Cargo item in ViewBag.ListaCargo)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Salario</td>
                            <td class="text-right">
                                <a class="btn btn-outline-danger" asp-action="Remover" asp-route-id="@item.CargoId"><i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm-6">
            <form asp-action="Index" method="post">
                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-primary"></div>

                    <div class="form-group" id="Nome">
                        <label>Nome</label>
                        <input type="text" asp-for="Nome" class="form-control" />
                    </div>

                    <div class="form-group" id="Descricao">
                        <label>Salario</label>
                        <input type="text" asp-for="Salario" class="form-control" />
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-3 text-right">
                            <input type="submit" class="btn btn-success" value="Cadastrar" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>