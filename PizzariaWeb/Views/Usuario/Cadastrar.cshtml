@model Usuario

<div class="card">
    <div class="card-header row justify-content-between">
        <div class="col-4 pl-2">
            <h5>Dados do Endereço</h5>
        </div>
        <div class="col-6 pl-0">
            <h5>Dados Pessoais</h5>
        </div>
    </div>
    <form method="post">
        <div class="row container">
            <fieldset class="col-sm-6">
                <div asp-validation-summary="ModelOnly" class="text-primary"></div>

                <div class="form-group row" id="Cep">
                    <div class="col-10">
                        <label asp-for="Endereco.Cep"></label>
                        <input type="text" asp-for="Endereco.Cep" class="form-control" />
                    </div>
                    <div class="col-2 align-self-end">
                        <a type="submit" class="btn btn-info" asp-action="BuscarCep" asp-controller="Usuario">
                            <i class="fas fa-search"></i>
                        </a>
                    </div>
                </div>

                <div class="form-group" id="Logradouro">
                    <label asp-for="Endereco.Logradouro"></label>
                    <input type="text" asp-for="Endereco.Logradouro" class="form-control" readonly />
                </div>

                <div class="form-group" id="Bairro">
                    <label asp-for="Endereco.Bairro"></label>
                    <input type="text" asp-for="Endereco.Bairro" class="form-control" readonly />
                </div>

                <div class="form-group" id="Localidade">
                    <label asp-for="Endereco.Localidade"></label>
                    <input type="text" asp-for="Endereco.Localidade" class="form-control" readonly />
                </div>

                <div class="form-group" id="Uf">
                    <label asp-for="Endereco.Uf"></label>
                    <input type="text" asp-for="Endereco.Uf" class="form-control" readonly />
                </div>
            </fieldset>
            <fieldset class="col-sm-6">
                <div class="form-group" id="Email">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>

                <div class="form-group" id="Senha">
                    <label asp-for="Senha"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                </div>

                <div class="form-group" id="ConfirmacaoSenha">
                    <label asp-for="ConfirmacaoSenha"></label>
                    <input type="password" asp-for="ConfirmacaoSenha" class="form-control" />
                </div>

                <div class="row justify-content-end">
                    <div class="col-3 text-right">
                        <input type="submit" class="btn btn-success" value="Cadastrar" asp-action="Cadastrar" asp-controller="Usuario" />
                    </div>
                </div>
            </fieldset>
        </div>
    </form>
</div>
