@model Bebida

<div class="col-sm-6">
    <h2>Bebidas registrados</h2>
    <table style="margin-bottom:15px;margin-top:15px"
           class="table table-hover table-striped">
        <thead>
            <tr class="table-active">
                <th>Nome</th>
                <th>Preço</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Bebida item in ViewBag.ListaBebida)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Preco</td>
                    <td class="text-right">
                        <a class="btn btn-danger" asp-action="Remover" asp-route-id="@item.BebidaId">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-sm-6">
    <h2>Registrar Bebida</h2>
    <form asp-action="Index" method="post">
        <fieldset>
            <legend>Cadastrar Produto</legend>
            <div asp-validation-summary="ModelOnly" class="text-primary"></div>

            <div class="form-group" id="Nome">
                <label>Nome</label>
                <input type="text" asp-for="Nome" class="form-control" />
            </div>

            <div class="form-group" id="Preco">
                <label>Preço</label>
                <input type="text" asp-for="Preco" class="form-control" />
            </div>

            <input type="submit" class="btn btn-success" value="Cadastrar" />
        </fieldset>
    </form>
</div>


