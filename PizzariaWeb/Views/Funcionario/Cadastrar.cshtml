@model Funcionario

<div class="row justify-content-center">
    <div class="card w-50">
        <div class="card-header row justify-content-between">
            <div class="col-12 pl-2">
                <h5>Cadastrar Funcionário</h5>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Cadastrar" method="post">
                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-primary"></div>

                    <div class="row">
                        <div class="form-group col-12" id="Nome">
                            <label asp-for="Nome"></label>
                            <input type="text" asp-for="Nome" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6" id="Cpf">
                            <label asp-for="Cpf"></label>
                            <input type="text" asp-for="Cpf" class="form-control" />
                        </div>
                        <div id="Categoria" class="form-group col-6">
                            <label>Cargos:</label>
                            <select asp-items="@ViewBag.Cargos"
                                    class="form-control" name="drpCargos">
                                <option> -- SELECIONE -- </option>
                            </select>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-3 text-right">
                            <input type="submit" class="btn btn-success" value="Cadastrar" />
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>