@model Funcionario

<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastrar Funcionario</legend>
        <div asp-validation-summary="ModelOnly" class="text-primary"></div>
       
        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome" class="form-control" />
        </div>

        <div class="form-group" id="Cpf">
            <label asp-for="Cpf"></label>
            <input type="text" asp-for="Cpf" class="form-control" />
        </div>
        <div id="Categoria" class="form-group">
            <label>Cargos:</label>
            <select asp-items="@ViewBag.Cargos"
                    class="form-control" name="drpCargos">
                <option> -- SELECIONE -- </option>
            </select>
        </div>
        <input type="submit" class="btn btn-success" value="Cadastrar" />
    </fieldset>
</form>

