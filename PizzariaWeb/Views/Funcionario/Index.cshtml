@model List<Funcionario>

<div class="card">
    <div class="card-header row justify-content-between">
        <div class="col-8">
            <h5>Gerenciamento de Funcionários</h5>
        </div>
        <div class="col-2 text-center pl-5">
            <a class="btn btn-info" asp-action="Cadastrar">Cadastrar</a>
        </div>
    </div>
    <div class="card-body">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Cargo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Funcionario item in Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Cargo</td>
                        <td class="text-right">
                            <a class="btn btn-outline-danger" asp-action="Remover" asp-route-id="@item.FuncionarioId"><i class="fas fa-trash-alt"></i></a>
                            <a class="btn btn-outline-warning" asp-action="Alterar" asp-route-id="@item.FuncionarioId"><i class="far fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
