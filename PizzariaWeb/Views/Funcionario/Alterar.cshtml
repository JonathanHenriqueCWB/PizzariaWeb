@model Funcionario

<form asp-action="Alterar" method="post">
    <fieldset>
        <legend>Alterar Produto</legend>
        <!--Envia o id escondido do usuario para view-->
        <input type="hidden" asp-for="FuncionarioId" />

        <div class="form-group">
            <label>Id:</label>
            <!--Exibe id (somente leitura)-->
            <input type="text" asp-for="FuncionarioId" readonly="" class="form-control" />
        </div>

        <div class="form-group" id="Nome">
            <label>Nome:</label>
            <!--Exibe o nome na view para alteração-->
            <input type="text" asp-for="Nome" class="form-control" />
        </div>

        <div class="form-group" id="Nome">
            <label>Cpf:</label>
            <!--Exibe o cpf na view para alteração-->
            <input type="text" asp-for="Cpf" class="form-control" />
        </div>

        <!--Exibe os cargos para alteração-->
        <div id="Categoria" class="form-group">
            <label>Cargos:</label>
            <select asp-items="@ViewBag.Cargos"
                    class="form-control" name="drpCargos">
                <option> -- SELECIONE -- </option>
            </select>
        </div>

        <input type="submit" class="btn btn-success" value="Salvar" />

    </fieldset>
</form>

